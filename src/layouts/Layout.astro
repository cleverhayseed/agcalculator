<!-- Fallback consent modal (shown only if we can't open your CMP) -->
<div id="consent-modal" class="consent-modal" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="consent-title">
  <div class="consent-card">
    <h3 id="consent-title">Privacy choices</h3>
    <p>We’ll try to open your consent manager. If it isn’t available, you can reset this site’s stored choices and reload.</p>
    <div class="row">
      <button class="btn" id="consent-cancel" type="button">Close</button>
      <button class="btn primary" id="consent-reset" type="button">Reset &amp; reload</button>
    </div>
    <p class="note">This clears local storage keys like “agc_*” and IAB TCF strings, then refreshes the page.</p>
  </div>
</div>

<script is:inline>
  (function(){
    const btn = document.getElementById('privacy-choices');
    const modal = document.getElementById('consent-modal');
    const cancel = document.getElementById('consent-cancel');
    const reset = document.getElementById('consent-reset');

    function showModal(){ modal.classList.add('open'); modal.setAttribute('aria-hidden','false'); }
    function hideModal(){ modal.classList.remove('open'); modal.setAttribute('aria-hidden','true'); }

    // Try to open whichever CMP you’re using; otherwise show our fallback
    function openCMP(){
      // IAB TCF-compatible CMPs
      if (typeof window.__tcfapi === 'function'){
        try { window.__tcfapi('displayConsentUi', 2, function(){}); return true; } catch(e){}
      }
      // Google Funding Choices (best-effort)
      if (window.googlefc && (googlefc.showRevocationMessage || googlefc.showDialog)){
        try {
          if (typeof googlefc.showRevocationMessage === 'function') { googlefc.showRevocationMessage(); return true; }
          if (typeof googlefc.showDialog === 'function') { googlefc.showDialog(); return true; }
        } catch(e){}
      }
      // Your custom banner (if present)
      if (window.agcConsent && typeof window.agcConsent.show === 'function'){
        try { window.agcConsent.show(); return true; } catch(e){}
      }
      return false;
    }

    function clearLocalConsent(){
      try {
        Object.keys(localStorage).forEach(k=>{
          if (/^(agc_|agc-)/i.test(k) || /^IABTCF_/.test(k) || /^fcConsent/i.test(k)) localStorage.removeItem(k);
        });
      }catch(e){}
      try {
        document.cookie.split(';').forEach(c=>{
          const [name] = c.trim().split('=');
          if (/^(fcConsent|euconsent-v2|usprivacy|agc_)/i.test(name)){
            document.cookie = name + '=; expires=Thu, 01 Jan 1970 00:00:00 GMT; path=/; SameSite=Lax';
          }
        });
      }catch(e){}
      location.reload();
    }

    btn?.addEventListener('click', (e)=>{ e.preventDefault(); if (!openCMP()) showModal(); });
    cancel?.addEventListener('click', hideModal);
    modal?.addEventListener('click', (e)=>{ if (e.target === modal) hideModal(); });
    reset?.addEventListener('click', clearLocalConsent);
  })();
</script>


    <!-- Optional: “Install app” link handler (only runs if an element with id="install-app" exists) -->
    <script is:inline>
      (function () {
        const installLink = document.getElementById('install-app');
        if (!installLink) return;
        let deferredPrompt = null;

        const isIOS = () => /iphone|ipad|ipod/i.test(navigator.userAgent);

        window.addEventListener('beforeinstallprompt', (e) => {
          e.preventDefault();
          deferredPrompt = e;
        });

        installLink.addEventListener('click', async (evt) => {
          evt.preventDefault();

          if (deferredPrompt) {
            deferredPrompt.prompt();
            try {
              const { outcome } = await deferredPrompt.userChoice;
              if (outcome) { try { window.plausible && window.plausible('A2HS installed'); } catch {} }
            } catch {}
            deferredPrompt = null;
            return;
          }

          if (isIOS()) {
            alert('On iPhone/iPad: tap the Share button → “Add to Home Screen”.');
          } else {
            alert('Use your browser menu → “Install app” or “Add to Home screen”.');
          }
        });
      })();
    </script>

    <!-- Service worker -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(() => {});
        });
      }
