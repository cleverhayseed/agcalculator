  <!-- Units engine (page-local, same pattern as your grain-bin page) -->
  <script is:inline>
    (function(){
      const KEY = 'agc_units';
      const $$ = (s) => document.querySelectorAll(s);
      const conv = {
        'ac>ha': x => x * 0.404685642, 'ha>ac': x => x / 0.404685642,
        'lb>kg': x => x * 0.45359237,  'kg>lb': x => x / 0.45359237,
        // forage density: lb/ac <-> kg/ha
        'lbpac>kgha': x => x * (0.45359237/0.404685642),
        'kgha>lbpac': x => x / (0.45359237/0.404685642)
      };

      window.AGCUnits = {
        mode(){ return localStorage.getItem(KEY) || 'us'; },
        setMode(m){ localStorage.setItem(KEY, m); paint(m); },
        get(el){
          const raw = parseFloat(el.value);
          if (!isFinite(raw)) return NaN;
          const map = (el.dataset.unit || '').trim();
          if (!map) return raw; // already US
          if (this.mode()==='us') return raw;
          const [us, met] = map.split('>');
          const fn = conv[`${met}>${us}`];
          return fn ? fn(raw) : raw;
        },
        out(usNumber, map){
          if (!isFinite(usNumber)) return NaN;
          if (this.mode()==='us' || !map) return usNumber;
          const fn = conv[map];
          return fn ? fn(usNumber) : usNumber;
        }
      };

      function paint(mode){
        // toggle buttons
        document.querySelectorAll('.unit-toggle .u-btn').forEach(btn => {
          const on = btn.dataset.units === mode;
          btn.classList.toggle('active', on);
          btn.setAttribute('aria-pressed', String(on));
        });
        // labels / placeholders / inline unit texts
        $$('[data-unit-label]').forEach(el => {
          const [us, met] = el.dataset.unitLabel.split('|');
          el.textContent = (mode === 'metric' ? met : us);
        });
        $$('input[data-unit-ph]').forEach(el => {
          const [us, met] = el.dataset.unitPh.split('|');
          el.placeholder = (mode === 'metric' ? met : us);
        });
        $$('[data-unit-text]').forEach(el => {
          const [us, met] = el.dataset.unitText.split('|');
          el.textContent = (mode === 'metric' ? met : us);
        });
        // re-evaluate
        document.querySelectorAll('input,select').forEach(el => {
          el.dispatchEvent(new Event('input', {bubbles:true}));
          el.dispatchEvent(new Event('change', {bubbles:true}));
        });
      }

      document.addEventListener('click', (e) => {
        const btn = e.target.closest('.u-btn');
        if (!btn) return;
        window.AGCUnits.setMode(btn.dataset.units);
      });

      // init
      paint(window.AGCUnits.mode());
    })();
  </script>

  <script is:inline>
    // ===== Helpers & constants =====
    const $ = (id) => document.getElementById(id);
    const num = (id) => parseFloat(($(id)?.value ?? "").trim());
    const fmt0 = (n) => Number.isFinite(n) ? n.toLocaleString(undefined,{maximumFractionDigits:0}) : "—";
    const fmt1 = (n) => Number.isFinite(n) ? n.toLocaleString(undefined,{maximumFractionDigits:1}) : "—";
    const fmt2 = (n) => Number.isFinite(n) ? n.toLocaleString(undefined,{maximumFractionDigits:2}) : "—";

    const LB_TO_KG = 0.45359237;
    const AC_TO_HA = 0.404685642;
    const AUM_LB = 780;

    // Wire UI
    ["mode","acres","forage","util","wt","intake","head","days"].forEach(id => $(id).addEventListener("input", compute));
    $("mode").addEventListener("change", onMode);

    function onMode(){
      const m = $("mode").value;
      $("rowDays").style.display = m==="days" ? "" : "none";
      $("rowHead").style.display = m==="head" ? "" : "none";
      $("outDays").style.display = m==="days" ? "" : "none";
      $("outHead").style.display = m==="head" ? "" : "none";
      compute();
    }

    // Normalize inputs to US units for math
    function getUS(){
      const acresUS   = window.AGCUnits.get($("acres"));
      const forageUS  = window.AGCUnits.get($("forage")); // lb/ac
      const wtUS      = window.AGCUnits.get($("wt"));     // lb
      return {
        acres: acresUS,
        forage_lbpac: forageUS,
        util_pct: num("util"),
        wt_lb: wtUS,
        intake_pct: num("intake"),
        head: num("head"),
        days: num("days"),
        mode: $("mode").value
      };
    }

    function compute(){
      const I = getUS();

      if(!(I.acres>0) || !(I.forage_lbpac>0) || !(I.util_pct>=0) || !(I.wt_lb>0) || !(I.intake_pct>0)){
        // clear
        $("avail").textContent = "—";
        $("intakeOut").textContent = "—";
        $("resDays").textContent = "—";
        $("resHead").textContent = "—";
        $("aums").textContent = "—";
        $("aumPerAc").textContent = "—";
        $("aumPerHa").textContent = "—";
        document.getElementById("steps").innerHTML = `<span class="note">Enter pasture, forage, and animal details to see the step-by-step.</span>`;
        return;
      }

      const avail_lb   = I.acres * I.forage_lbpac * (I.util_pct/100);
      const intake_lb  = I.wt_lb * (I.intake_pct/100);

      let resDays = NaN, resHead = NaN;
      if (intake_lb>0){
        if (I.mode === "days" && I.head>0){
          resDays = avail_lb / (I.head * intake_lb);
        } else if (I.mode === "head" && I.days>0){
          resHead = avail_lb / (I.days * intake_lb);
        }
      }

      const aums = avail_lb / AUM_LB;
      const aumPerAc = I.acres>0 ? (aums / I.acres) : NaN;
      const aumPerHa = (I.acres*AC_TO_HA)>0 ? (aums / (I.acres*AC_TO_HA)) : NaN;

      // Display according to unit mode
      const metric = (window.AGCUnits.mode()==='metric');
      const availDisp  = metric ? avail_lb * LB_TO_KG : avail_lb;
      const intakeDisp = metric ? intake_lb * LB_TO_KG : intake_lb;

      $("avail").textContent    = fmt0(availDisp);
      $("intakeOut").textContent= fmt0(intakeDisp);
      $("resDays").textContent  = fmt1(resDays);
      $("resHead").textContent  = fmt1(resHead);
      $("aums").textContent     = fmt1(aums);
      $("aumPerAc").textContent = fmt2(aumPerAc);
      $("aumPerHa").textContent = fmt2(aumPerHa);

      // Step-by-step (in displayed units)
      const steps = [];
      const acresShow  = metric ? window.AGCUnits.out(I.acres, "ac>ha") : I.acres;
      const forageShow = metric ? window.AGCUnits.out(I.forage_lbpac, "lbpac>kgha") : I.forage_lbpac;
      const wtShow     = metric ? window.AGCUnits.out(I.wt_lb, "lb>kg") : I.wt_lb;

      const areaLbl = metric ? "ha" : "ac";
      const forageLbl = metric ? "kg/ha" : "lb/ac";
      const massLbl = metric ? "kg" : "lb";

      steps.push(`<div>Available forage = ${fmt0(acresShow)} ${areaLbl} × ${fmt0(forageShow)} ${forageLbl} × ${fmt1(I.util_pct)}% = <strong>${fmt0(availDisp)}</strong> ${massLbl}</div>`);
      steps.push(`<div>Intake/head/day = ${fmt0(wtShow)} ${metric ? "kg" : "lb"} × ${(I.intake_pct/100).toFixed(2)} = <strong>${fmt0(intakeDisp)}</strong> ${massLbl}/day</div>`);
      if (I.mode === "days" && Number.isFinite(resDays)) {
        steps.push(`<div>Grazing days = ${fmt0(availDisp)} ÷ (${fmt0(I.head)} × ${fmt0(intakeDisp)}) = <strong>${fmt1(resDays)}</strong> days</div>`);
      }
      if (I.mode === "head" && Number.isFinite(resHead)) {
        steps.push(`<div>Head capacity = ${fmt0(availDisp)} ÷ (${fmt1(I.days)} × ${fmt0(intakeDisp)}) = <strong>${fmt1(resHead)}</strong> head</div>`);
      }
      steps.push(`<div>AUMs = ${fmt0(metric ? availDisp/LB_TO_KG : availDisp)} ÷ 780 = <strong>${fmt1(aums)}</strong> AUM</div>`);
      document.getElementById("steps").innerHTML = `<div style="display:grid;gap:.35rem">${steps.join("")}</div>`;

      try { window.plausible && window.plausible("Used Pasture Stocking"); } catch {}
    }

    // initial render
    onMode();
    compute();
  </script>
</Layout>
