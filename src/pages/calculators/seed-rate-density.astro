    <fieldset id="rowBox">
      <legend>Row spacing</legend>
      <div class="row">
        <div>
          <label for="rowIn">Row spacing (<span data-unit-text="in|cm"></span>)</label>
          <input id="rowIn" type="number" step="0.1" placeholder="e.g. 30" data-unit="in>cm" data-unit-ph="e.g. 30|e.g. 76" />
        </div>
        <div>
          <label for="inRowIn">In-row spacing (<span data-unit-text="in|cm"></span>)</label>
          <input id="inRowIn" type="number" step="0.1" placeholder="e.g. 6" data-unit="in>cm" data-unit-ph="e.g. 6|e.g. 15" />
        </div>
        <div>
          <label>&nbsp;</label>
          <div class="note" data-unit-text="Plants/ft² = 144 ÷ (row × in-row)|Plants/m² = 1550 ÷ (row(cm) × in-row(cm))"></div>
        </div>
      </div>
    </fieldset>

    <fieldset id="areaBox" style="display:none">
      <legend>Target population</legend>
      <div class="row">
        <div>
          <label for="targetPer">Target plants</label>
          <select id="targetPer">
            <option value="acre" data-unit-text="per acre|per hectare">per acre</option>
            <option value="ft2"  data-unit-text="per ft²|per m²">per ft²</option>
          </select>
        </div>
        <div>
          <label for="targetVal">Target value</label>
          <input id="targetVal" type="number" step="1" placeholder="e.g. 32000" />
        </div>
        <div>
          <label>&nbsp;</label>
          <div class="note">If you know plants/area directly.</div>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>Seed quality &amp; size</legend>
      <div class="row">
        <div>
          <label for="germ">Germination (%)</label>
          <input id="germ" type="number" step="0.1" value="90" />
        </div>
        <div>
          <label for="purity">Purity (%)</label>
          <input id="purity" type="number" step="0.1" value="98" />
        </div>
        <div>
          <label for="reserve">Reserve / overplant (%)</label>
          <input id="reserve" type="number" step="0.1" value="0" />
        </div>
      </div>
      <div class="row">
        <div>
          <label for="seedsPerLb" data-unit-label="Seeds per pound (optional)|Seeds per kilogram (optional)">Seeds per pound (optional)</label>
          <input id="seedsPerLb" type="number" step="1" placeholder="e.g. 2900 (soy) / 16000 (wheat)" data-unit="seedslb>seedskg" data-unit-ph="e.g. 2900|e.g. 6400" />
        </div>
        <div>
          <label>&nbsp;</label>
          <div class="note">We'll convert seeds → <span data-unit-text="pounds|kilograms"></span> if provided.</div>
        </div>
        <div></div>
      </div>
    </fieldset>

    <section class="result">
      <div class="note">Results</div>
      <div style="display:grid;gap:.5rem;margin-top:.4rem">
        <div><strong>Target stand (<span data-unit-text="per acre|per hectare"></span>):</strong> <span id="plantsAcre">—</span></div>
        <div><strong>Seeds required (<span data-unit-text="per acre|per hectare"></span>):</strong> <span id="seedsAcre">—</span></div>
        <div><strong>Seed rate:</strong> <span id="lbsAcre">—</span> <span data-unit-text="lb/acre|kg/ha"></span></div>
        <div><strong>Seeds for your area:</strong> <span id="seedsArea">—</span></div>
        <div><strong><span data-unit-text="Pounds|Kilograms"></span> for your area:</strong> <span id="lbsArea">—</span></div>
        <div id="rowExtras"><strong>Plants per 1000 <span data-unit-text="ft|m"></span> of row:</strong> <span id="plantsPerK">—</span></div>
      </div>
      <p class="note" style="margin-top:.6rem">Estimates only. Calibrate your planter/drill for exact delivery.</p>
    </section>

    <!-- Ad #2 -->
    <div class="ads">
      <ins class="adsbygoogle adwrap"
           style="display:block"
           data-ad-client="ca-pub-4050846968323757"
           data-ad-slot="0000000202"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>
      <script is:inline>(window.adsbygoogle=window.adsbygoogle||[]).push({});</script>
    </div>

    <section class="content" id="explain">
      <h2>How we got these numbers</h2>
      <div id="steps" class="note">Enter spacing or target population to see the step-by-step.</div>

      <h3>Formulas</h3>
      <ul>
        <li><strong>Plants/ft²</strong> (row mode) = <code>144 ÷ (row(in) × in-row(in))</code> <em>• Metric: Plants/m² ≈ 1550 ÷ (row(cm) × in-row(cm))</em></li>
        <li><strong>Plants/acre</strong> = plants/ft² × 43,560 <em>• per hectare = × 2.47105</em></li>
        <li><strong>Effective seed fraction</strong> = (germ% × purity%) ÷ 10000</li>
        <li><strong>Required seeds</strong> = target plants ÷ effective × (1 + reserve%)</li>
        <li><strong>Pounds/acre</strong> = seeds/acre ÷ seeds-per-pound <em>• kg/ha = lb/ac × 1.12085</em></li>
        <li><strong>Plants per 1000 ft row</strong> = 1000 ÷ (in-row spacing (ft)) <em>• per 1000 m = 1000 ÷ spacing(m)</em></li>
      </ul>

      <p class="disclaimer">Prepared by AgCalculator · Estimates only. Verify before purchasing materials or operating equipment.</p>
    </section>
  </main>

  <!-- ===== Units helper (same as Grain Bin, extended for this tool) ===== -->
  <script is:inline>
    (function(){
      const KEY='agc_units';
      const $$=(s)=>document.querySelectorAll(s);
      const conv={
        'ft>m':x=>x*0.3048,'m>ft':x=>x/0.3048,
        'in>cm':x=>x*2.54,'cm>in':x=>x/2.54,
        'ft2>m2':x=>x*0.09290304,'m2>ft2':x=>x/0.09290304,
        'lb>kg':x=>x*0.45359237,'kg>lb':x=>x/0.45359237,
        // seeds per mass: seeds/kg = seeds/lb * 2.20462...
        'seedslb>seedskg':x=>x*2.20462262185,'seedskg>seedslb':x=>x/2.20462262185
      };
      window.AGCUnits={
        mode:()=>localStorage.getItem(KEY)||'us',
        setMode(m){localStorage.setItem(KEY,m);paint(m);},
        get(el){
          const raw=parseFloat(el.value);
          if(!isFinite(raw))return NaN;
          const map=(el.dataset.unit||'').trim();
          if(!map)return raw;
          if(this.mode()==='us')return raw;
          const [us,met]=map.split('>');
          const fn=conv[`${met}>${us}`];
          return fn?fn(raw):raw;
        },
        out(usNumber,map){
          if(!isFinite(usNumber))return NaN;
          if(this.mode()==='us'||!map)return usNumber;
          const fn=conv[map];
          return fn?fn(usNumber):usNumber;
        }
      };
      function paint(mode){
        document.querySelectorAll('.unit-toggle .u-btn').forEach(btn=>{
          const on=btn.dataset.units===mode;
          btn.classList.toggle('active',on);
          btn.setAttribute('aria-pressed',String(on));
        });
        $$('[data-unit-text]').forEach(el=>{
          const [us,met]=el.dataset.unitText.split('|');
          el.textContent=(mode==='metric'?met:us);
        });
        $$('[data-unit-label]').forEach(el=>{
          const [us,met]=el.dataset.unitLabel.split('|');
          el.textContent=(mode==='metric'?met:us);
        });
        $$('input[data-unit-ph]').forEach(el=>{
          const [us,met]=el.dataset.unitPh.split('|');
          el.placeholder=(mode==='metric'?met:us);
        });
        // trigger recompute
        document.querySelectorAll('input,select').forEach(el=>{
          el.dispatchEvent(new Event('input',{bubbles:true}));
          el.dispatchEvent(new Event('change',{bubbles:true}));
        });
      }
      document.addEventListener('click',(e)=>{
        const btn=e.target.closest('.u-btn'); if(!btn) return;
        window.AGCUnits.setMode(btn.dataset.units);
      });
      // init
      const init=window.AGCUnits.mode();
      paint(init);
      document.querySelector(`.u-btn[data-units="${init}"]`)?.classList.add('active');
    })();
  </script>

  <!-- ===== Page logic ===== -->
  <script is:inline>
    const $=(id)=>document.getElementById(id);
    const num=(id)=>parseFloat((($(id)?.value??"")+"").trim());
    const fmt0=(n)=>Number.isFinite(n)?n.toLocaleString(undefined,{maximumFractionDigits:0}):"—";
    const fmt1=(n)=>Number.isFinite(n)?n.toLocaleString(undefined,{maximumFractionDigits:1}):"—";

    // UI wiring
    ["mode","areaMode","targetPer"].forEach(id=>$(id).addEventListener("change",onMode));
    ["areaVal","rowIn","inRowIn","targetVal","germ","purity","reserve","seedsPerLb"].forEach(id=>$(id).addEventListener("input",compute));
    onMode(); compute();

    function onMode(){
      const m=$("mode").value;
      $("rowBox").style.display = m==="row" ? "" : "none";
      $("areaBox").style.display= m==="area"? "" : "none";
      $("rowExtras").style.display = m==="row" ? "" : "none";
      compute();
    }

    // area (normalize to ft²)
    function areaFt2(){
      const v=num("areaVal"); if(!(v>0)) return NaN;
      const mode = window.AGCUnits.mode();
      const sel = $("areaMode").value; // 'ac' or 'ft2'
      if(mode==='us'){
        return sel==='ac' ? v*43560 : v;  // acres → ft²; ft² passthrough
      } else {
        // metric: 'ac' shows as hectares; 'ft2' shows as m²
        if (sel==='ac') return v * 107639.104167; // ha → ft²
        return window.AGCUnits.out(v,'m2>ft2');   // m² → ft²
      }
    }

    // effective fraction & seeds per mass
    const effectiveFraction=()=>{
      const g=Math.max(0,Math.min(100,num("germ")||0))/100;
      const p=Math.max(0,Math.min(100,num("purity")||0))/100;
      return g*p;
    };
    const seedsPerPound = ()=> window.AGCUnits.get($("seedsPerLb")); // returns seeds/lb (US normalized) or NaN

    function seedsNeeded(targetPlants){
      const eff=effectiveFraction();
      const reserve=Math.max(0,num("reserve")||0)/100;
      if(!(targetPlants>0) || !(eff>0)) return NaN;
      return targetPlants/eff * (1+reserve);
    }

    function compute(){
      const Aft2=areaFt2();
      const m=$("mode").value;
      if(!(Aft2>0)){ show(); $("steps").innerHTML='<span class="note">Enter area to see the step-by-step.</span>'; return; }

      let plantsPerFt2=NaN, plantsPerAcre=NaN, plantsArea=NaN, seedsAcre=NaN, lbsAcre=NaN, seedsArea=NaN, lbsArea=NaN, plantsPerK=NaN;

      if(m==="row"){
        const rowInUS = window.AGCUnits.get($("rowIn"));    // inches
        const inRowUS = window.AGCUnits.get($("inRowIn"));  // inches
        if(!(rowInUS>0 && inRowUS>0)){ show(); $("steps").innerHTML='<span class="note">Enter both spacings.</span>'; return; }

        plantsPerFt2 = 144 / (rowInUS * inRowUS);
        plantsPerAcre= plantsPerFt2 * 43560;
        plantsArea   = plantsPerFt2 * Aft2;

        const sAcre  = seedsNeeded(plantsPerAcre);
        const sArea  = seedsNeeded(plantsArea);
        const sPerLb = seedsPerPound();

        seedsAcre = sAcre;
        seedsArea = sArea;
        lbsAcre   = (sPerLb>0 && sAcre>0) ? (sAcre / sPerLb) : NaN;
        lbsArea   = (sPerLb>0 && sArea>0) ? (sArea / sPerLb) : NaN;

        // plants per 1000 ft or 1000 m
        if(window.AGCUnits.mode()==='us'){
          const inRowFt = inRowUS/12;
          plantsPerK = (inRowFt>0) ? (1000 / inRowFt) : NaN;
        } else {
          const inRowM = inRowUS*0.0254;
          plantsPerK = (inRowM>0) ? (1000 / inRowM) : NaN;
        }

        // steps
        const eff=effectiveFraction();
        const reserve=Math.max(0,num("reserve")||0)/100;
        const lines=[];
        lines.push(`<div>Plants/ft² = 144 ÷ (${rowInUS} × ${inRowUS}) = <strong>${fmt1(plantsPerFt2)}</strong></div>`);
        lines.push(`<div>Plants/acre = ${fmt1(plantsPerFt2)} × 43,560 = <strong>${fmt0(plantsPerAcre)}</strong></div>`);
        lines.push(`<div>Effective fraction = germ × purity = <strong>${eff.toFixed(3)}</strong></div>`);
        lines.push(`<div>Seeds/acre = ${fmt0(plantsPerAcre)} ÷ ${eff.toFixed(3)} × ${(1+reserve).toFixed(2)} = <strong>${fmt0(seedsAcre)}</strong></div>`);
        $("steps").innerHTML=`<div style="display:grid;gap:.35rem">${lines.join("")}</div>`;

      } else {
        const per=$("targetPer").value; // 'acre' or 'ft2' (metric labels handled in UI)
        const t=num("targetVal");
        if(!(t>0)){ show(); $("steps").innerHTML='<span class="note">Enter a target population.</span>'; return; }

        // normalize target to per acre for core math
        const perAcre = (per==="acre")
          ? t
          : (t * 43560); // per ft² → per acre
        plantsPerAcre= perAcre;
        plantsPerFt2 = perAcre/43560;
        plantsArea   = plantsPerFt2 * Aft2;

        const sAcre  = seedsNeeded(plantsPerAcre);
        const sArea  = seedsNeeded(plantsArea);
        const sPerLb = seedsPerPound();

        seedsAcre = sAcre;
        seedsArea = sArea;
        lbsAcre   = (sPerLb>0 && sAcre>0) ? (sAcre / sPerLb) : NaN;
        lbsArea   = (sPerLb>0 && sArea>0) ? (sArea / sPerLb) : NaN;

        const eff=effectiveFraction();
        const reserve=Math.max(0,num("reserve")||0)/100;
        const lines=[];
        lines.push(`<div>Plants/acre = <strong>${fmt0(plantsPerAcre)}</strong> (${fmt1(plantsPerFt2)} per ft²)</div>`);
        lines.push(`<div>Area plants = ${fmt1(plantsPerFt2)} × ${Aft2.toLocaleString()} = <strong>${fmt0(plantsArea)}</strong></div>`);
        lines.push(`<div>Seeds/acre = ${fmt0(plantsPerAcre)} ÷ ${eff.toFixed(3)} × ${(1+reserve).toFixed(2)} = <strong>${fmt0(seedsAcre)}</strong></div>`);
        $("steps").innerHTML=`<div style="display:grid;gap:.35rem">${lines.join("")}</div>`;
      }

      // display with unit-mode conversions
      const metric = (window.AGCUnits.mode()==='metric');
      const toHa   = (x)=> x*2.47105381;      // per acre → per hectare
      const lbAc_to_kgHa = (x)=> x*1.120849;  // lb/ac → kg/ha

      $("plantsAcre").textContent = fmt0(metric ? toHa(plantsPerAcre) : plantsPerAcre);
      $("seedsAcre").textContent  = fmt0(metric ? toHa(seedsAcre)     : seedsAcre);
      $("lbsAcre").textContent    = Number.isFinite(lbsAcre) ? (metric ? lbAc_to_kgHa(lbsAcre).toLocaleString(undefined,{maximumFractionDigits:2}) : lbsAcre.toLocaleString(undefined,{maximumFractionDigits:2})) : "—";
      $("seedsArea").textContent  = fmt0(seedsArea);
      $("lbsArea").textContent    = Number.isFinite(lbsArea) ? (metric ? (lbsArea*0.45359237).toLocaleString(undefined,{maximumFractionDigits:2}) : lbsArea.toLocaleString(undefined,{maximumFractionDigits:2})) : "—";
      $("plantsPerK").textContent = fmt0(plantsPerK);
    }

    function show(){
      $("plantsAcre").textContent="—";
      $("seedsAcre").textContent="—";
      $("lbsAcre").textContent="—";
      $("seedsArea").textContent="—";
      $("lbsArea").textContent="—";
      $("plantsPerK").textContent="—";
    }
  </script>
</Layout>
