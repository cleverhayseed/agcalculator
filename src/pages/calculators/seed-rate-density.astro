  </Fragment>

  <header><div class="wrap"><a href="/">← AgCalculator</a></div></header>

  <main class="wrap">
    <h1 style="margin:.5rem 0 1rem">Seed Rate &amp; Planting Density</h1>

    <!-- Units toggle -->
    <div class="unit-toggle" role="group" aria-label="Units">
      <strong style="margin-right:.25rem">Units:</strong>
      <button type="button" class="u-btn" data-units="us" aria-pressed="false">US</button>
      <button type="button" class="u-btn" data-units="metric" aria-pressed="false">Metric</button>
      <small class="note" style="margin-left:.5rem">Saved on this device</small>
    </div>

    <!-- Ad #1 -->
    <div class="ads">
      <ins class="adsbygoogle adwrap"
           style="display:block"
           data-ad-client="ca-pub-4050846968323757"
           data-ad-slot="0000000201"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>
      <script is:inline>(window.adsbygoogle=window.adsbygoogle||[]).push({});</script>
    </div>

    <fieldset>
      <legend>Method</legend>
      <div class="row">
        <div>
          <label for="mode">Choose calculator</label>
          <select id="mode">
            <option value="row">Row crop (row &amp; in-row spacing)</option>
            <option value="area">Broadcast / target population</option>
          </select>
        </div>
        <div>
          <label for="areaMode">Area input</label>
          <select id="areaMode">
            <!-- values stay 'ac' and 'ft2'; labels switch to ha/m² in metric -->
            <option value="ac" data-unit-text="Acres|Hectares">Acres</option>
            <option value="ft2" data-unit-text="Square feet|Square meters">Square feet</option>
          </select>
        </div>
        <div>
          <label for="areaVal">Area</label>
          <input id="areaVal" type="number" step="0.01" placeholder="e.g. 1.0" />
          <div class="note"><span data-unit-text="1 acre = 43,560 ft²|1 ha = 10,000 m²"></span></div>
        </div>
      </div>
