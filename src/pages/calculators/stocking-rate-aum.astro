  <header><div class="wrap"><a href="/">← AgCalculator</a></div></header>

  <main class="wrap">
    <h1 style="margin:.5rem 0 1rem">Stocking Rate &amp; AUM</h1>

    <!-- Units toggle -->
    <div class="unit-toggle" role="group" aria-label="Units">
      <strong style="margin-right:.25rem">Units:</strong>
      <button type="button" class="u-btn" data-units="us" aria-pressed="false">US</button>
      <button type="button" class="u-btn" data-units="metric" aria-pressed="false">Metric</button>
      <small class="note" style="margin-left:.5rem">Saved on this device</small>
    </div>

    <!-- Ad slot #1 -->
    <div class="ads">
      <ins class="adsbygoogle adwrap"
           style="display:block"
           data-ad-client="ca-pub-4050846968323757"
           data-ad-slot="0000000301"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>
      <script is:inline>(window.adsbygoogle=window.adsbygoogle||[]).push({});</script>
    </div>

    <fieldset>
      <legend>Forage &amp; area</legend>
      <div class="row">
        <div>
          <label for="mode">Forage input</label>
          <select id="mode">
            <option value="monthly"  data-unit-text="lb/ac/month|kg/ha/month">lb/ac/month</option>
            <option value="seasonal" data-unit-text="lb/ac/season|kg/ha/season">lb/ac/season</option>
          </select>
        </div>
        <div id="rowMonthly">
          <label for="dmPerAcreMo">Forage (<span data-unit-text="lb/ac/mo|kg/ha/mo"></span>)</label>
          <input id="dmPerAcreMo" type="number" step="1" placeholder="e.g. 200" data-unit="lbac>kgha" data-unit-ph="e.g. 200|e.g. 225" />
        </div>
        <div id="rowSeason" style="display:none">
          <label for="dmPerAcreSeason">Forage (<span data-unit-text="lb/ac/season|kg/ha/season"></span>)</label>
          <input id="dmPerAcreSeason" type="number" step="1" placeholder="e.g. 800" data-unit="lbac>kgha" data-unit-ph="e.g. 800|e.g. 897" />
        </div>
      </div>

      <div class="row">
        <div>
          <label for="months">Grazing months (season length)</label>
          <input id="months" type="number" step="0.1" value="4" />
        </div>
        <div>
          <label for="util">Utilization (%)</label>
          <input id="util" type="number" step="1" value="35" />
          <div class="note">25–50% typical</div>
        </div>
        <div>
          <label for="acres"><span data-unit-text="Pasture acres|Pasture hectares"></span></label>
          <input id="acres" type="number" step="0.01" placeholder="e.g. 40" data-unit="ac>ha" data-unit-ph="e.g. 40|e.g. 16.2" />
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>Solve for…</legend>
      <div class="row">
        <div>
          <label for="solve">Goal</label>
          <select id="solve">
            <option value="aum">AUM capacity</option>
            <option value="head">Head supported (for given months)</option>
            <option value="months">Months supported (for given head)</option>
          </select>
        </div>
        <div>
          <label for="animal">Animal type (AUE)</label>
          <select id="animal">
            <option value="1.00">Cow-calf pair (1.00 AU)</option>
            <option value="1.00">Dry cow, 1000 lb (1.00 AU)</option>
            <option value="1.30">Bull (1.30 AU)</option>
            <option value="0.70">Yearling (0.70 AU)</option>
            <option value="1.25">Horse (1.25 AU)</option>
            <option value="0.20">Sheep (0.20 AU)</option>
            <option value="0.17">Goat (0.17 AU)</option>
          </select>
        </div>
        <div id="rowHead" style="display:none">
          <label for="head">Head count</label>
          <input id="head" type="number" step="1" placeholder="e.g. 20" />
        </div>
