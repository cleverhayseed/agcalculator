      <ins class="adsbygoogle adwrap"
           style="display:block"
           data-ad-client="ca-pub-4050846968323757"
           data-ad-slot="0000000302"
           data-ad-format="auto"
           data-full-width-responsive="true"></ins>
      <script is:inline>(window.adsbygoogle=window.adsbygoogle||[]).push({});</script>
    </div>

    <section class="content" id="explain">
      <h2>How we got these numbers</h2>
      <div id="steps" class="note">Enter forage, utilization, area, and months (if monthly) to see step-by-step.</div>

      <h3>Formulas</h3>
      <ul>
        <li><strong>Available DM</strong> =
          <code>acres × (lb/ac/mo × months)</code> or
          <code>acres × (lb/ac/season)</code>, then × <code>utilization%</code>
          <em>• Metric UI converts to kg/ha</em>
        </li>
        <li><strong>AUM</strong> = <code>Available DM ÷ 780</code></li>
        <li><strong>Head supported</strong> = <code>AUM ÷ (AUE × months)</code></li>
        <li><strong>Months supported</strong> = <code>AUM ÷ (AUE × head)</code></li>
      </ul>

      <h3>Example</h3>
      <p>200 lb/ac/mo, 4 months, 35% utilization, 40 acres:</p>
      <ol>
        <li>Raw DM = 200 × 4 × 40 = <strong>32,000 lb</strong></li>
        <li>Available DM = 32,000 × 0.35 = <strong>11,200 lb</strong></li>
        <li>AUM = 11,200 ÷ 780 ≈ <strong>14.4 AUM</strong></li>
        <li>Head supported (cow-calf) for 4 mo = 14.4 ÷ (1.0 × 4) ≈ <strong>3.6 head</strong></li>
      </ol>

      <p class="disclaimer">Estimates only. Verify with local range guidelines and adjust for species, weather, and soil.</p>
    </section>
  </main>

  <!-- ===== Units helper (shared) ===== -->
  <script is:inline>
    (function () {
      const KEY='agc_units';
      const $$=(s)=>document.querySelectorAll(s);
      const conv={
        'lb>kg':x=>x*0.45359237,'kg>lb':x=>x/0.45359237,
        'ac>ha':x=>x*0.40468564224,'ha>ac':x=>x/0.40468564224,
        // mass/area: lb/ac ↔ kg/ha
        'lbac>kgha':x=>x*1.120849,'kgha>lbac':x=>x/1.120849
      };
      window.AGCUnits={
        mode:()=>localStorage.getItem(KEY)||'us',
        setMode(m){localStorage.setItem(KEY,m);paint(m);},
        get(el){
          const raw=parseFloat(el.value);
          if(!isFinite(raw))return NaN;
          const map=(el.dataset.unit||'').trim();
          if(!map||this.mode()==='us')return raw;
          const [us,met]=map.split('>');
          const fn=conv[`${met}>${us}`];
          return fn?fn(raw):raw;
        },
        out(usNumber,map){
          if(!isFinite(usNumber))return NaN;
          if(this.mode()==='us'||!map)return usNumber;
          const fn=conv[map];
          return fn?fn(usNumber):usNumber;
        }
      };
      function paint(mode){
        document.querySelectorAll('.unit-toggle .u-btn').forEach(btn=>{
          const on=btn.dataset.units===mode;
          btn.classList.toggle('active',on);
          btn.setAttribute('aria-pressed',String(on));
        });
        $$('[data-unit-text]').forEach(el=>{
          const [us,met]=el.dataset.unitText.split('|');
          el.textContent=(mode==='metric'?met:us);
        });
        $$('[data-unit-label]').forEach(el=>{
          const [us,met]=el.dataset.unitLabel.split('|');
          el.textContent=(mode==='metric'?met:us);
        });
        $$('input[data-unit-ph]').forEach(el=>{
          const [us,met]=el.dataset.unitPh.split('|');
          el.placeholder=(mode==='metric'?met:us);
        });
        // poke inputs to recompute
        document.querySelectorAll('input,select').forEach(el=>{
          el.dispatchEvent(new Event('input',{bubbles:true}));
          el.dispatchEvent(new Event('change',{bubbles:true}));
        });
      }
      document.addEventListener('click',(e)=>{
        const btn=e.target.closest('.u-btn'); if(!btn) return;
        window.AGCUnits.setMode(btn.dataset.units);
      });
      // init
      const init=window.AGCUnits.mode();
      paint(init);
      document.querySelector(`.u-btn[data-units="${init}"]`)?.classList.add('active');
    })();
  </script>

  <!-- ===== Page logic (math normalized to US units) ===== -->
  <script is:inline>
    const $ = (id) => document.getElementById(id);
    const val = (id) => parseFloat((($(id)?.value ?? "") + "").trim());
    const fmt0 = (n) => Number.isFinite(n) ? n.toLocaleString(undefined,{maximumFractionDigits:0}) : "—";
    const fmt1 = (n) => Number.isFinite(n) ? n.toLocaleString(undefined,{maximumFractionDigits:1}) : "—";

    ["mode","solve"].forEach(id => $(id).addEventListener("change", onMode));
    ["dmPerAcreMo","dmPerAcreSeason","months","util","acres","animal","head"]
      .forEach(id => $(id).addEventListener("input", compute));
    onMode(); compute();

    function onMode(){
      const mode = $("mode").value;
      $("rowMonthly").style.display = mode==="monthly" ? "" : "none";
      $("rowSeason").style.display  = mode==="seasonal" ? "" : "none";

      const solve = $("solve").value;
      $("outHead").style.display   = solve==="head"   ? ""   : "none";
      $("outMonths").style.display = solve==="months" ? ""   : "none";
      $("rowHead").style.display   = solve==="months" ? ""   : "none";
      compute();
    }

    function availableDM_lb(){
      const acresUS = window.AGCUnits.get($("acres"));            // acres
      const util  = Math.max(0, Math.min(100, val("util")||0))/100;
      if(!(acresUS>0) || !(util>0)) return NaN;

      const mode = $("mode").value;
      let raw_lb = NaN;
      if(mode==="monthly"){
        const dmLbac = window.AGCUnits.get($("dmPerAcreMo"));     // lb/ac/mo (US)
        const m = val("months");
        if(!(dmLbac>0) || !(m>0)) return NaN;
        raw_lb = dmLbac * m * acresUS;
      } else {
        const dmLbacSeason = window.AGCUnits.get($("dmPerAcreSeason")); // lb/ac/season (US)
        if(!(dmLbacSeason>0)) return NaN;
        raw_lb = dmLbacSeason * acresUS;
      }
      return raw_lb * util;
    }

    function compute(){
      const DM_lb = availableDM_lb();
      if(!(DM_lb>0)){
        show();
        $("steps").innerHTML = '<span class="note">Enter forage, utilization, area, and months (if monthly) to see step-by-step.</span>';
        return;
      }

      const AUM = DM_lb / 780;
      const AUE = parseFloat($("animal").value);
      const months = Math.max(0, val("months") || 0);
      const head   = Math.max(0, val("head")   || 0);
      const solve  = $("solve").value;

      let headsSupp = NaN, monthsSupp = NaN;
      if (solve === "head"   && months>0 && AUE>0) headsSupp = AUM / (AUE * months);
      if (solve === "months" && head>0   && AUE>0) monthsSupp = AUM / (AUE * head);

      // Steps
      const mode = $("mode").value;
      const acresUS = window.AGCUnits.get($("acres"));
      const u = Math.max(0, Math.min(100, val("util")||0))/100;
      const lines=[];
      if(mode==="monthly"){
        const dm = window.AGCUnits.get($("dmPerAcreMo"));
        const m  = val("months");
        const raw = dm>0 && m>0 && acresUS>0 ? dm*m*acresUS : NaN;
        lines.push(`<div>Raw DM = ${fmt0(dm)} × ${fmt1(m)} × ${fmt1(acresUS)} = <strong>${fmt0(raw)}</strong> lb</div>`);
        lines.push(`<div>Available DM = raw × utilization = ${fmt0(raw)} × ${u.toFixed(2)} = <strong>${fmt0(DM_lb)}</strong> lb</div>`);
      } else {
        const dmS = window.AGCUnits.get($("dmPerAcreSeason"));
        const raw = dmS>0 && acresUS>0 ? dmS*acresUS : NaN;
        lines.push(`<div>Raw DM = ${fmt0(dmS)} × ${fmt1(acresUS)} = <strong>${fmt0(raw)}</strong> lb</div>`);
        lines.push(`<div>Available DM = raw × utilization = ${fmt0(raw)} × ${u.toFixed(2)} = <strong>${fmt0(DM_lb)}</strong> lb</div>`);
      }
      lines.push(`<div>AUM = Available DM ÷ 780 = ${fmt0(DM_lb)} ÷ 780 = <strong>${fmt1(AUM)}</strong> AUM</div>`);
      if(Number.isFinite(headsSupp))  lines.push(`<div>Head supported = ${fmt1(AUM)} ÷ (${AUE.toFixed(2)} × ${fmt1(months)}) = <strong>${fmt1(headsSupp)}</strong></div>`);
      if(Number.isFinite(monthsSupp)) lines.push(`<div>Months supported = ${fmt1(AUM)} ÷ (${AUE.toFixed(2)} × ${fmt1(head)}) = <strong>${fmt1(monthsSupp)}</strong></div>`);
      $("steps").innerHTML = `<div style="display:grid;gap:.35rem">${lines.join("")}</div>`;

      // Display (respect mode)
      const metric = (window.AGCUnits.mode()==='metric');
      const DM_disp = metric ? window.AGCUnits.out(DM_lb, 'lb>kg') : DM_lb;
      $("availDM").textContent   = metric ? fmt0(DM_disp) : fmt0(DM_disp);
      $("aum").textContent       = fmt1(AUM);
      $("headsSupp").textContent = fmt1(headsSupp);
      $("monthsSupp").textContent= fmt1(monthsSupp);
    }

    function show(){
      $("availDM").textContent="—";
      $("aum").textContent="—";
      $("headsSupp").textContent="—";
      $("monthsSupp").textContent="—";
    }
  </script>
</Layout>
